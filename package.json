{
	"name": "ether-debug",
	"displayName": "ether Debug",
	"version": "0.25.0",
	"publisher": "andreweinand",
	"description": "Starter extension for developing debug adapters for VS Code.",
	"author": {
		"name": "Microsoft Corporation",
		"email": "aweinand@microsoft.com"
	},
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.17.0",
		"node": "^7.9.0"
	},
	"icon": "images/ether-debug-icon.png",
	"categories": [
		"Debuggers"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-ether-debug.git"
	},
	"bugs": {
		"url": "https://github.com/Microsoft/vscode-ether-debug/issues"
	},
	"dependencies": {
		"vscode-debugprotocol": "^1.25.0-pre.0",
		"vscode-debugadapter": "^1.25.0-pre.0"
	},
	"devDependencies": {
		"@types/node": "^6.0.50",
		"@types/mocha": "^2.2.44",
		"typescript": "^2.5.3",
		"mocha": "^3.5.0",
		"vscode": "^1.1.6",
		"vscode-debugadapter-testsupport": "^1.24.0",
		"tslint": "^5.8.0",
		"vsce": "^1.31.2"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug",
		"onCommand:extension.ether-debug.getProgramName"
	],
	"contributes": {
		"breakpoints": [
			{
				"language": "solidity"
			}
		],
		"debuggers": [
			{
				"type": "ether",
				"label": "ether Debug",
				"program": "./out/etherDebug.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a text file.",
								"default": "${workspaceFolder}/${command:AskForProgramName}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "ether",
						"request": "launch",
						"name": "Ask for file name",
						"program": "${workspaceFolder}/${command:AskForProgramName}",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "ether Debug: Launch",
						"description": "A new configuration for launching a ether debug program",
						"body": {
							"type": "ether",
							"request": "launch",
							"name": "${2:Launch Program}",
							"program": "^\"\\${workspaceFolder}/${1:Program}\""
						}
					}
				],
				"variables": {
					"AskForProgramName": "extension.ether-debug.getProgramName"
				}
			}
		]
	}
}
